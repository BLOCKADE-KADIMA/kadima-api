{
  "name": "blockade-api",
  "addons": [
    {
      "plan": "cloudamqp",
      "as": "CLOUDAMQP"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "env": {
    "NODE_ENV": {
      "description": "Node environment. node_modules packages can alter their behaviour when in production. Heroku will prune devPackages when in production.",
      "value": "production"
    },
    "NODE_CONFIG_ENV": {
      "description": "Realm for loading config entries",
      "required": true
    },
    "PAPERTRAIL_HOST": {
      "required": true
    },
    "PAPERTRAIL_PORT": {
      "required": true
    },
    "SENTRY_DSN": {
      "required": true
    },
    "INFURA_PROJECT_ID": {
      "required": true
    },
    "KADIMA_CONTRACT_ADDRESS": {
      "required": false
    },
    "ACCOUNTS_WALLET_ENCRYPTION_KEY": {
      "required": true
    },
    "INFURA_CHAIN_ID": {
      "required": false
    },
    "ACCOUNTS_JWT_KEY": {
      "required": true
    },
    "BLOCKCHAIN_KADIMA_WALLET_ADD": {
      "required": true
    },
    "BLOCKCHAIN_KADIMA_WALLET_KEY": {
      "required": true
    },
    "BLOCKCHAIN_ETHER_WALLET_ADD": {
      "required": true
    },
    "BLOCKCHAIN_ETHER_WALLET_KEY": {
      "required": true
    },
    "AWS_ACCESS_KEY": {
      "required": true
    },
    "AWS_ACCESS_SECRET": {
      "required": true
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "MONGODB_URI": {
      "required": true
    }
  },
  "stack": "container"
}
